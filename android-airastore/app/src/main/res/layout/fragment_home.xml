<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Live Stream Section -->
    <TextView
        android:id="@+id/live_stream_section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Live Streaming"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:paddingBottom="8dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/live_stream_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:scrollbars="horizontal"
        android:paddingBottom="16dp" />

    <!-- Products Section -->
    <TextView
        android:id="@+id/products_section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Products"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:paddingBottom="8dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <!-- SwipeRefreshLayout and other UI elements can be added as needed -->

</LinearLayout>
